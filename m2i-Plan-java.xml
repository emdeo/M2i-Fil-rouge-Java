  <axe_L nom="introduction" niveau="1">

    <axe_M nom="origines" niveau="2">
        <axe_S nom="historique" niveau="3">
            <contenu>
                Comment a été conçu Java ?
            </contenu>
        </axe_S>
        <axe_S nom="versions" niveau="3">
            <contenu>
                Présentation des versions successives
            </contenu>
        </axe_S>
    </axe_M>

    <axe_M nom="fonctions" niveau="2">
        <axe_S nom="objet" niveau="3">
            <contenu>
                Les principes de la POO
            </contenu>
        </axe_S>
        <axe_S nom="typage" niveau="3">
            <contenu>
                Java est un langage fortement typé
            </contenu>
        </axe_S>
        <axe_S nom="portable" niveau="3">
            <contenu>
                Java est compatible avec différentes plateformes (machine physique + OS)
            </contenu>
        </axe_S>
        <axe_S nom="applications" niveau="3">
            <contenu>
                Applications web, bureau et mobile
            </contenu>
            <contenu>
                Jeux vidéos (Minecraft...)
            </contenu>
            <contenu>
                Communication avec les serveurs, connexions aux bases de données...
            </contenu>
        </axe_S>
    </axe_M>

    <axe_M nom="usages" niveau="2">
        <axe_S nom="ide" niveau="3">
            <contenu>
                Présentation des environnements de développement (Oracle, IntelIJ...)
            </contenu>
        </axe_S>
        <axe_S nom="documentation" niveau="3">
            <contenu>
                Contributions et partage de code en open-source
            </contenu>
        </axe_S>
    </axe_M>

    <axe_M nom="mecanismes" niveau="2">
        <axe_S nom="jvm" niveau="3">
            <contenu>
                Qu'est-ce qu'une machine virtuelle ?
            </contenu>
            <contenu>
                Java : compilation, exécution, gestion mémoire...
            </contenu>
        </axe_S>
        <axe_S nom="aspects" niveau="3">
            <contenu>
                Avantage : Java est multiplateforme
            </contenu>
            <contenu>
                Inconvénient : Java est lent
            </contenu>
        </axe_S>
    </axe_M>

  </axe_L>

  <axe_L nom="code" niveau="1">
    
    <axe_M nom="donnees" niveau="2">
        <axe_S nom="variables" niveau="3">
            <contenu>
                Variables et types primitifs : byte, short, int, long, float, double, char, String, boolean
            </contenu>
        </axe_S>
        <axe_S nom="tableaux" niveau="3">
            <contenu>
                listes ("[]"), dictionnaires ("{}") et collections ("ArrayList", "List"...)
            </contenu>
        </axe_S>
        <axe_S nom="operateurs" niveau="3">
            <contenu>
                Manipuler les informations : +, -, /, *, %, ++, and, or, supérieur à, supérieur ou égal à, égal à, différent de
            </contenu>
        </axe_S>
        <axe_S nom="commentaires" niveau="3">
            <contenu>
                Documenter et maintenir son code : // et /**/
            </contenu>
        </axe_S>
    </axe_M>

    <axe_M nom="controle" niveau="2">
        <axe_S nom="conditions" niveau="3">
            <contenu>
                Gérer des événements différents : if-else
            </contenu>
            <contenu>
                Gérer les possibilités d'un même événement : switch
            </contenu>
        </axe_S>
        <axe_S nom="boucles" niveau="3">
            <contenu>
                Itérations à travers une liste : for et for-each
            </contenu>
            <contenu>
                Itérations à travers des événements particuliers : while et do-while
            </contenu>
        </axe_S>
        <axe_S nom="exceptions" niveau="3">
            <contenu>
                Gérer des situations innatendues (exceptions et messages d'erreurs)
            </contenu>
        </axe_S>
    </axe_M>

    <axe_M nom="fonctions" niveau="2">
        <axe_S nom="creation" niveau="3">
            <contenu>
                Faire nos propres fonctions : notion d'algorithme, return et paramètres
            </contenu>
        </axe_S>
        <axe_S nom="predefinies" niveau="3">
            <contenu>
                Méthodes importées avec Java : System, String...
            </contenu>
        </axe_S>
    </axe_M>

    <axe_M nom="classes" niveau="2">
        <axe_S nom="librairies" niveau="3">
            <contenu>
                Packages et librairies : comment (et pourquoi) importer du code écrit par d'autres personnes
            </contenu>
        </axe_S>
        <axe_S nom="base" niveau="3">
            <contenu>
                Classes de base : Math, Random, JavaFX...
            </contenu>
        </axe_S>
        <axe_S nom="concepts" niveau="3">
            <contenu>
                Enumération, exceptions, modificateurs d'accès, constructeurs, encapsulation, héritage, polymorphisme, interfaces, classes abstraites, classes internes, transtypage, "this", instanciation, déclencheurs, threads, patrons de conception, concurrency...
            </contenu>
        </axe_S>
    </axe_M>

    <axe_M nom="deploiement" niveau="2">
        <axe_S nom="debogage" niveau="3">
            <contenu>
                Détecter et corriger ses erreurs
            </contenu>
        </axe_S>
        <axe_S nom="archivage" niveau="3">
            <contenu>
                Compresser et exporter son code
            </contenu>
        </axe_S>
    </axe_M>

  </axe_L>

  <axe_L nom="ecosysteme" niveau="1">
    
    <axe_M nom="frameworks" niveau="2">
        <axe_S nom="usages" niveau="3">
            <contenu>
                Infrastructure de développement : encadre la conception de programmes selon un patron de conception prédéfini
            </contenu>
        </axe_S>
        <axe_S nom="populaires" niveau="3">
            <contenu>
                Spring, Angular, JUnit, React...
            </contenu>
        </axe_S>
    </axe_M>

    <axe_M nom="plugins" niveau="2">
        <axe_S nom="usages" niveau="3">
            <contenu>
                Apporter de nouvelles fonctionnalités à un logiciel
            </contenu>
        </axe_S>
        <axe_S nom="populaires" niveau="3">
            <contenu>
                Eclipse : JPF, RCP...
            </contenu>
        </axe_S>
    </axe_M>

    <axe_M nom="api" niveau="2">
        <axe_S nom="usages" niveau="3">
            <contenu>
                Gestion de services web : transactions, gestion de bases de données, contrats applicatifs (?), développement dynamique (HTML, XML...), data mining...
            </contenu>
        </axe_S>
        <axe_S nom="populaires" niveau="3">
            <contenu>
                JDBC, JAX, Apache Tomcat...
            </contenu>
        </axe_S>
    </axe_M>

